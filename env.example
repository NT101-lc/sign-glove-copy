# Sign Glove Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
# For local MongoDB:
# MONGO_URI=mongodb://localhost:27017
# For MongoDB Atlas:
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/signglove?retryWrites=true&w=majority
DB_NAME=sign_language_glove

# CORS Settings
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://localhost:8000"]

# TTS Configuration
TTS_ENABLED=true
TTS_PROVIDER=edge
TTS_VOICE=ur-IN-SalmanNeural
TTS_RATE=150
TTS_VOLUME=2.0
TTS_CACHE_ENABLED=true
TTS_CACHE_DIR=tts_cache

# ESP32 Configuration
ESP32_IP=192.168.1.123

# Sensor Configuration
FLEX_SENSORS=5
IMU_SENSORS=6
TOTAL_SENSORS=11
NORMALIZE_NUMBER=4095.0
DECIMAL_PLACES=4

# Noise Reduction Settings
WINDOW_SIZE=3
OUTLIER_THRESHOLD=2.0

# Data Collection Settings
SERIAL_PORT=COM5
BAUD_RATE=115200 